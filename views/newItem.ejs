<html>
  <head>
    <title>New Item</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="newHeader">New Item</div>
    <form action="/<%= category %>/new-item" method="post">
      <label>
        Name
        <input type="text" name="itemName" />
      </label>
      <label>
        Details
        <input type="text" name="itemDetails" />
      </label>
      <label>
        Price
        <input type="number" name="itemPrice" />
      </label>
      <button type="submit">Create</button>
    </form>
  </body>
</html>
